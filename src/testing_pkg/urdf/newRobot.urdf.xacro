<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">

  <xacro:include filename="inertial_macros.xacro"/>

  <xacro:property name="ns" value="$(arg ns)"/>

  <material name="white">
      <color rgba="1 1 1 1" />
  </material>

  <material name="orange">
      <color rgba="1 0.3 0.1 1"/>
  </material>

  <material name="blue">
      <color rgba="0.2 0.2 1 1"/>
  </material>

  <material name="black">
      <color rgba="0 0 0 1"/>
  </material>

  <material name="red">
      <color rgba="1 0 0 1"/>
  </material>

  <!-- BASE LINK -->

  <link name="base_link_${ns}">

  </link>

  <!-- BASE_FOOTPRINT LINK -->

  <joint name="base_footprint_join_${ns}" type="fixed">
    <parent link="base_link_${ns}"/>
    <child link="base_footprint_${ns}"/>
    <origin xyz="0 0 0" rpy="0 90 0"/>
  </joint>

  <link name="base_footprint_${ns}">
  </link>


  <!-- Main Body -->
  <joint name="chassis_joint_${ns}" type="fixed">
    <parent link="base_link_${ns}"/>
    <child link="chassis_${ns}"/>
    <origin xyz="0 0 0"/>
  </joint>
  <link name="chassis_${ns}">
    <visual>
      <origin xyz="0.105 0 0.01"/>
      <geometry>
        <box size="0.21 0.16 0.02"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.105 0 0.01"/>
      <geometry>
        <box size="0.21 0.16 0.02"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="0.3" x="0.21" y="0.16" z="0.02">
      <origin xyz="0.105 0 0.01" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>

  <!-- Wheels -->
  <link name="left_wheel_${ns}">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.05" length="0.02" radius="0.03">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <link name="right_wheel_${ns}">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.05" length="0.02" radius="0.03">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <!-- Joints for Wheels -->
  <joint name="left_wheel_joint_${ns}" type="continuous">
    <parent link="chassis_${ns}"/>
    <child link="left_wheel_${ns}"/>
    <origin xyz="0.04 -0.08 -0.03" rpy="1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="right_wheel_joint_${ns}" type="continuous">
    <parent link="chassis_${ns}"/>
    <child link="right_wheel_${ns}"/>
    <origin xyz="0.04 0.08 -0.03" rpy="1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <gazebo reference="right_wheel_${ns}">
    <mu1>0.7</mu1>
    <mu2>0.7</mu2>
    <kp>500000.0</kp>
    <kd>10.0</kd>
    <minDepth>0.001</minDepth>
    <maxVel>0.1</maxVel>
    <fdir1>1 0 0</fdir1>
    <material>Gazebo/FlatBlack</material>
  </gazebo>

  <gazebo reference="left_wheel_${ns}">
    <mu1>0.7</mu1>
    <mu2>0.7</mu2>
    <kp>500000.0</kp>
    <kd>10.0</kd>
    <minDepth>0.001</minDepth>
    <maxVel>0.1</maxVel>
    <fdir1>1 0 0</fdir1>
    <material>Gazebo/FlatBlack</material>
  </gazebo>

  <!-- Lidar Sensor -->
   <joint name="laser_joint_${ns}" type="fixed">
    <parent link="chassis_${ns}"/>
    <child link="laser_frame_${ns}"/>
    <origin xyz="0.03 0 0.03" rpy="0 3.14 0"/>
  </joint>

  <link name="laser_frame_${ns}">
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
      <material name="black"/>
    </visual>
    <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <gazebo reference="laser_frame_${ns}">
    <sensor name="laser" type="ray">
      <pose> 0 0 0 0 0 0 </pose>
      <visualize>true</visualize>
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>30</samples>
            <resolution>1</resolution>
            <min_angle>-2.0944</min_angle>
            <max_angle>2.0944</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.04</min>
          <max>12</max>
          <resolution>0.01</resolution>
        </range>
      </ray>
      <plugin name="laser_controller" filename="libgazebo_ros_laser.so">
        <topicName>${ns}/scan</topicName>
        <frameName>laser_frame_${ns}</frameName>
      </plugin>
    </sensor>
  </gazebo>

  <!-- Caster Wheel -->
  <link name="caster_wheel_${ns}">
    <visual>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
    </collision>
    <xacro:inertial_sphere mass="0.01" radius="0.02">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_sphere>
  </link>

  <joint name="joint_caster_${ns}" type="fixed">
    <parent link="chassis_${ns}"/>
    <child link="caster_wheel_${ns}"/>
    <origin xyz="0.16 0 -0.03" rpy="0 0 0"/>
  </joint>

  <gazebo reference="caster_wheel_${ns}">
    <mu1>0.1</mu1>
    <mu2>0.1</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.001</minDepth>
    <maxVel>1.0</maxVel>
    <material>Gazebo/FlatBlack</material>
  </gazebo>


  <!-- Control System -->
  <gazebo>
    <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">

      <!-- Plugin update rate in Hz -->
      <updateRate>11</updateRate>

      <!-- Name of left joint, defaults to `left_joint` -->
      <leftJoint>left_wheel_joint_${ns}</leftJoint>

      <!-- Name of right joint, defaults to `right_joint` -->
      <rightJoint>right_wheel_joint_${ns}</rightJoint>

      <!-- The distance from the center of one wheel to the other, in meters, defaults to 0.34 m -->
      <wheelSeparation>0.17</wheelSeparation>

      <!-- Diameter of the wheels, in meters, defaults to 0.15 m -->
      <wheelDiameter>0.06</wheelDiameter>

      <!-- Wheel acceleration, in rad/s^2, defaults to 0.0 rad/s^2 -->
      <wheelAcceleration>0.1</wheelAcceleration>

      <!-- Maximum torque which the wheels can produce, in Nm, defaults to 5 Nm -->
      <wheelTorque>20</wheelTorque>

      <!-- Topic to receive geometry_msgs/Twist message commands, defaults to `cmd_vel` -->
      <commandTopic>${ns}/cmd_vel</commandTopic>

      <!-- Topic to publish nav_msgs/Odometry messages, defaults to `odom` -->
      <odometryTopic>${ns}/odom</odometryTopic>

      <!-- Odometry frame, defaults to `odom` -->
      <odometryFrame>${ns}/odom</odometryFrame>

      <!-- Robot frame to calculate odometry from, defaults to `base_footprint` -->
      <robotBaseFrame>base_link_${ns}</robotBaseFrame>

      <!-- Odometry source, 0 for ENCODER, 1 for WORLD, defaults to WORLD -->
      <odometrySource>1</odometrySource>

      <!-- Set to true to publish transforms for the wheel links, defaults to false -->
      <publishWheelTF>false</publishWheelTF>

      <!-- Set to true to publish transforms for the odometry, defaults to true -->
      <publishOdom>true</publishOdom>

      <!-- Set to true to publish sensor_msgs/JointState on /joint_states for the wheel joints, defaults to false -->
      <publishWheelJointState>true</publishWheelJointState>

      <!-- Set to true to swap right and left wheels, defaults to true -->
      <legacyMode>false</legacyMode>
    </plugin>
  </gazebo>

</robot>
